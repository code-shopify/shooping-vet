<section class="custom-banner-section" style="
  margin-top: {{ section.settings.margin_top }}px;
  margin-bottom: {{ section.settings.margin_bottom }}px;
">
  <div class="featured-collection__container" style="  max-width: {{ section.settings.container_width }}; margin: 0 auto;">
    <div class="banner-wrapper">
      {% for block in section.blocks %}
        <div class="banner-block">
          {% if block.settings.image %}
            <div class="banner-image" style="
              background-image: url({{ block.settings.image | img_url: 'master' }});
              height: {{ section.settings.image_height }}px;
            ">
              <div class="banner-content" style="
                color: {{ block.settings.text_color }};
                font-size: {{ block.settings.text_size }};
                letter-spacing: {{ block.settings.letter_spacing }};
              ">
                {% if block.settings.small_text != blank %}
                  <p class="banner-small-text" style="
                    font-size: {{ block.settings.small_text_size }};
                    font-weight: {{ block.settings.small_text_bold }};
                  ">{{ block.settings.small_text }}</p>
                {% endif %}
                {% if block.settings.title != blank %}
                  <h2 class="banner-title" style="
                    font-size: {{ block.settings.title_size }};
                    font-weight: {{ block.settings.title_bold }};
                  ">{{ block.settings.title }}</h2>
                {% endif %}
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="banner-button" style="
                    background: {{ block.settings.button_color }};
                    color: {{ block.settings.button_text_color }};
                  ">{{ block.settings.button_label }}</a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .custom-banner-section .banner-wrapper {
    display: flex;
    gap: 2rem;
  }
  .custom-banner-section .banner-block {
    width: 50%;
  }
  .custom-banner-section .banner-image {
    position: relative;
    background-size: cover;
    background-position: center;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 1rem;
  }
  .custom-banner-section .banner-content {
    text-align: center;
    padding: 20px;
    position: absolute;
    width: 30%;
    left: 0;
  }
  .custom-banner-section .banner-button {
    padding: 10px 20px;
    display: inline-block;
    border-radius: 25px;
    margin-top: 10px;
    text-decoration: none;
  }
  @media (max-width: 749px) {
    .custom-banner-section .banner-block {
      width: 100%;
    }
    .custom-banner-section .banner-wrapper {
      flex-wrap: wrap;
    }
    .banner-content {
      width: 100% !important;
    }
    .banner-image {
      height: 250px !important;
    }
  }
</style>

{%- schema -%}
{
  "name": "Dos Banners",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margen superior",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margen inferior",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Altura de las imágenes",
      "min": 200,
      "max": 800,
      "step": 10,
      "unit": "px",
      "default": 500
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "container_width",
      "label": "Container width",
      "options": [
        {
          "value": "1432px",
          "label": "Default - 1400px"
        },
        {
          "value": "1952px",
          "label": "Large - 1920px"
        },
        {
          "value": "100%",
          "label": "Full width"
        },
        {
          "value": "inherit",
          "label": "Inherit of general setting"
        }
      ],
      "default": "inherit",
      "info": "If you select 'Inherit of general setting', then container width will be used from the Theme settings/Layout"
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Bloque de Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "small_text",
          "label": "Texto pequeño",
   
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
  
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Texto del botón",
   
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Enlace del botón",
  
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Color del texto",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "text_size",
          "label": "Tamaño del texto",
          "min": 12,
          "max": 36,
          "step": 1,
          "unit": "px",
          "default": 16
        },
        {
          "type": "range",
          "id": "letter_spacing",
          "label": "Espaciado entre letras",
          "min": 0,
          "max": 5,
          "step": 0.1,
          "unit": "em",
          "default": 0
        },
        {
          "type": "range",
          "id": "small_text_size",
          "label": "Tamaño del texto pequeño",
          "min": 10,
          "max": 24,
          "step": 1,
          "unit": "px",
          "default": 14
        },
        {
          "type": "select",
          "id": "small_text_bold",
          "label": "Negrita del texto pequeño",
          "options": [
            { "value": "normal", "label": "Normal" },
            { "value": "bold", "label": "Negrita" }
          ],
          "default": "normal"
        },
        {
          "type": "range",
          "id": "title_size",
          "label": "Tamaño del título",
          "min": 16,
          "max": 48,
          "step": 1,
          "unit": "px",
          "default": 24
        },
        {
          "type": "select",
          "id": "title_bold",
          "label": "Negrita del título",
          "options": [
            { "value": "normal", "label": "Normal" },
            { "value": "bold", "label": "Negrita" }
          ],
          "default": "bold"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Color del botón",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Color del texto del botón",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dos Banners",
      "blocks": [
        {
          "type": "banner"
        },
        {
          "type": "banner"
        }
      ]
    }
  ]
}
{%- endschema -%}