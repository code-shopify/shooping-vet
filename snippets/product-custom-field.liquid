{% comment %}
------------------------------------------------------------------------------
  Snippet: Product Custom fields
------------------------------------------------------------------------------
{% endcomment %}
{% if block.settings.field_label != blank %}
	{%- capture styles -%}
		--offset-top-desktop: {{ block.settings.offset_top_desktop }}px; {{-  -}}
		--offset-bottom-desktop: {{ block.settings.offset_bottom_desktop }}px; {{-  -}}
		--offset-top-mobile: {{ block.settings.offset_top_mobile }}px; {{-  -}}
		--offset-bottom-mobile: {{ block.settings.offset_bottom_mobile }}px;
	{%- endcapture -%}

	<div class="product-custom-field js-custom-field-block" style="{{ styles }}">
		<div>
			<label class="label-input" for="Custom-field-input-{{ block.id }}">
				<span class="product-custom-field__label-normal">
					{{ block.settings.field_label }}
				</span>
			</label>

			<input
				class="product-custom-field__input input js-custom-field-input"
				id="Custom-field-input-{{ block.id }}"
				type="text"
				placeholder="{{ block.settings.field_label }}"
				name="properties[{{ block.settings.field_label }}]"
				value=""
			>

			<span
				id="Custom-field-error-{{- block.id -}}"
				class="product-custom-field__error error"
				tabindex="-1"
				role="alert"
			>
				{{ 'products.product.custom_fields_errors.input_error' | t }}
			</span>
		</div>

		{% if block.settings.required_text != blank %}
			<div class="product-custom-field__required-field">
				<input id="Custom-field-checkbox-{{ block.id }}"
					   class="checkbox js-custom-field-checkbox"
					   type="checkbox"
				>

				<label for="Custom-field-checkbox-{{ block.id }}" class="checkbox-label">
					<span class="checkbox-label__box "></span>
					{{ block.settings.required_text }}
				</label>

				<span
					id="Custom-field-error-{{- block.id -}}"
					class="product-custom-field__error error"
					tabindex="-1"
					role="alert"
				>
					{{ 'products.product.custom_fields_errors.checkbox_error' | t }}
			</span>
			</div>
		{% endif %}
	</div>
{% endif %}
