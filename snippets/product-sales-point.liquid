{%- capture styles -%}
	--offset-top-desktop: {{ block.settings.offset_top_desktop }}px; {{-  -}}
	--offset-bottom-desktop: {{ block.settings.offset_bottom_desktop }}px; {{-  -}}
	--offset-top-mobile: {{ block.settings.offset_top_mobile }}px; {{-  -}}
	--offset-bottom-mobile: {{ block.settings.offset_bottom_mobile }}px;
{%- endcapture -%}

<div class="product-sales-point" style="{{ styles }}">
	{% if block.settings.sales_point_icon != blank %}
		<img class="product-sales-point__icon"
			 src="{{ block.settings.sales_point_icon | image_url: width: 24, height: 24 }}"
			 srcset="{{ block.settings.sales_point_icon | image_url: width: 24, height: 24 }} 1x,
					{{ block.settings.sales_point_icon | image_url: width: 48, height: 48 }} 2x"
			 alt="{{ block.settings.sales_point_icon.alt | escape }}"
			 width="24"
			 height="24"
			 aria-hidden="true"
		>
	{% endif %}

	{% if block.settings.sales_point_text != blank %}
		<p class="product-sales-point__text">{{ block.settings.sales_point_text }}</p>
	{% endif %}
</div>
